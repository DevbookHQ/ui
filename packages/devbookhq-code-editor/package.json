{
  "name": "@devbookhq/code-editor",
  "version": "0.1.3",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "LICENSE",
  "files": [
    "dist/**",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "prepublish": "node ./scripts/cleanse-pkg \"a,b,prepublish,postpublish\" \"@devbookhq/utils,@devbookhq/tsconfig,eslint-config-devbookhq\"",
    "build": "tsup src/index.ts --format esm --dts --external react --external @devbookhq/sdk --loader .svg=text --sourcemap --minify",
    "dev": "tsup src/index.ts --format esm --dts --watch --external react --external @devbookhq/sdk --loader .svg=text --sourcemap",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@devbookhq/tsconfig": "workspace:*",
    "@types/diff": "^5.0.2",
    "@types/path-browserify": "^1.0.0",
    "@types/react": "^17.0.13",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.13",
    "eslint-config-devbookhq": "workspace:*",
    "postcss": "^8.4.17",
    "postcss-import": "^15.0.0",
    "react": "^17.0.2",
    "tailwindcss": "^3.1.8",
    "tsup": "^5.10.1",
    "typescript": "^4.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundledDependencies": [
    "@devbookhq/utils",
    "@devbookhq/tsconfig",
    "eslint-config-devbookhq"
  ],
  "dependencies": {
    "@devbookhq/utils": "workspace:*",
    "@codemirror/autocomplete": "6.3.3",
    "@codemirror/commands": "^6.1.2",
    "@codemirror/language": "^6.3.1",
    "@codemirror/lint": "^6.1.0",
    "@codemirror/state": "^6.1.4",
    "@codemirror/view": "^6.5.1",
    "@devbookhq/sdk": "^2.6.9",
    "@lezer/highlight": "^1.1.2",
    "@vscode/codicons": "^0.0.32",
    "diff": "^5.1.0",
    "highlight.js": "^11.6.0",
    "path-browserify": "^1.0.1",
    "rehype-external-links": "^2.0.1",
    "rehype-highlight": "^6.0.0",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2",
    "vscode-jsonrpc": "^8.0.2",
    "vscode-languageserver-protocol": "^3.17.2",
    "vscode-ws-jsonrpc": "^2.0.0"
  }
}