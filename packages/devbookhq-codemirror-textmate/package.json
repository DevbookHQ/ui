{
  "name": "@devbookhq/codemirror-textmate",
  "version": "0.0.0",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "private": true,
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --external react --loader --sourcemap",
    "dev": "tsup src/index.ts --format esm --dts --watch --external react --sourcemap",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@devbookhq/tsconfig": "workspace:*",
    "@types/react": "^17.0.13",
    "eslint-config-devbookhq": "workspace:*",
    "react": "^17.0.2",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@codemirror/language": "^6.3.1",
    "vscode-languageserver-protocol": "^3.17.2",
    "vscode-oniguruma": "^1.6.2",
    "vscode-textmate": "^7.0.3"
  }
}